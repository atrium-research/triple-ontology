@prefix triple: <https://gotriple.eu/ontology/triple#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix oa: <http://www.w3.org/ns/oa#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix schema: <https://schema.org/> .
@base <https://gotriple.eu/ontology/triple/> .

<https://gotriple.eu/ontology/triple> rdf:type owl:Ontology ;
                                       owl:versionIRI <https://gotriple.eu/ontology/triple/15.0.0> .

#################################################################
#    Annotation Properties
#################################################################

###  http://www.w3.org/2004/02/skos/core#prefLabel
skos:prefLabel rdf:type owl:AnnotationProperty .

#################################################################
#    Object Properties
#################################################################

###  http://www.w3.org/ns/oa#hasBody
oa:hasBody rdf:type owl:ObjectProperty ;
           rdfs:label "hasBody"@en .

###  http://www.w3.org/ns/oa#hasTarget
oa:hasTarget rdf:type owl:ObjectProperty ;
             rdfs:label "hasTarget"@en .

###  http://www.w3.org/ns/oa#motivatedBy
oa:motivatedBy rdf:type owl:ObjectProperty ;
               rdfs:label "motivatedBy"@en .

###  https://schema.org/mentions
schema:mentions rdf:type owl:ObjectProperty ;
                rdfs:label "mentions"@en .

#################################################################
#    Data properties
#################################################################

###  https://schema.org/name
schema:name rdf:type owl:DatatypeProperty ;
            rdfs:label "name"@en .

#################################################################
#    Classes
#################################################################

###  http://www.w3.org/ns/oa#Annotation
oa:Annotation rdf:type owl:Class ;
              rdfs:label "Annotation"@en .

###  http://www.w3.org/ns/oa#Motivation
oa:Motivation rdf:type owl:Class ;
              rdfs:label "Motivation"@en .

###  https://schema.org/Person
schema:Person rdf:type owl:Class ;
              rdfs:label "Person"@en .

###  http://www.w3.org/2004/02/skos/core#Concept
skos:Concept rdf:type owl:Class ;
             rdfs:label "Concept"@en .

###  https://gotriple.eu/ontology/triple#Document
triple:Document rdf:type owl:Class ;
                rdfs:subClassOf [ rdf:type owl:Restriction ;
                                  owl:onProperty schema:mentions ;
                                  owl:someValuesFrom oa:Annotation
                                ] ;
                rdfs:label "Document"@en .

###  https://schema.org/Place
schema:Place rdf:type owl:Class ;
             rdfs:label "Place"@en .

#################################################################
#    Individuals
#################################################################

###  http://www.w3.org/ns/oa#identifying
oa:identifying rdf:type owl:NamedIndividual ,
                        oa:Motivation ;
               rdfs:label "identifying"@en .
