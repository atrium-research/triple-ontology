@prefix : <https://gotriple.eu/ontology/triple#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@base <https://gotriple.eu/ontology/triple> .

<https://gotriple.eu/ontology/triple> rdf:type owl:Ontology ;
                                       owl:versionInfo "1.0.0" .

#################################################################
#    Object Properties
#################################################################

###  http://schema.org/author
schema:author rdf:type owl:ObjectProperty ;
              rdfs:label "author"@en ;
              rdfs:comment "The author of this content"@en ;
              rdfs:domain :Document ;
              rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] ;
              rdfs:subPropertyOf schema:creator .


###  http://schema.org/contributor
schema:contributor rdf:type owl:ObjectProperty ;
                   rdfs:label "contributor"@en ;
                   rdfs:comment "A secondary contributor to the CreativeWork"@en ;
                   rdfs:domain :Document ;
                   rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] .


###  http://schema.org/publisher
schema:publisher rdf:type owl:ObjectProperty ;
                 rdfs:label "publisher"@en ;
                 rdfs:comment "The publisher of the creative work"@en ;
                 rdfs:domain :Document ;
                 rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] .


###  http://schema.org/producer
schema:producer rdf:type owl:ObjectProperty ;
                rdfs:label "producer"@en ;
                rdfs:comment "The person or organization who produced the work"@en ;
                rdfs:domain :Document ;
                rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] .


###  http://schema.org/funder
schema:funder rdf:type owl:ObjectProperty ;
              rdfs:label "funder"@en ;
              rdfs:comment "A person or organization that supports through funding"@en ;
              rdfs:domain :Document ;
              rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] .


###  http://schema.org/provider
schema:provider rdf:type owl:ObjectProperty ;
                rdfs:label "provider"@en ;
                rdfs:comment "The service provider, organization, or individual that provides the data"@en ;
                rdfs:domain :Document ;
                rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] .


###  https://gotriple.eu/ontology/triple#aggregator
:aggregator rdf:type owl:ObjectProperty ;
            rdfs:label "aggregator"@en ;
            rdfs:comment "An aggregator that collates documents from different sources"@en ;
            rdfs:domain :Document ;
            rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] ;
            rdfs:subPropertyOf schema:contributor .


###  https://gotriple.eu/ontology/triple#primaryProducer
:primaryProducer rdf:type owl:ObjectProperty ;
                 rdfs:label "primary producer"@en ;
                 rdfs:comment "The original source or creator of the document"@en ;
                 rdfs:domain :Document ;
                 rdfs:range [ owl:unionOf (foaf:Person foaf:Organization) ] ;
                 rdfs:subPropertyOf schema:producer .


#################################################################
#    Data properties
#################################################################

###  http://schema.org/name
schema:name rdf:type owl:DatatypeProperty ;
            rdfs:label "name"@en ;
            rdfs:domain [ owl:unionOf (foaf:Person foaf:Organization) ] ;
            rdfs:range xsd:string .


###  http://schema.org/datePublished
schema:datePublished rdf:type owl:DatatypeProperty ;
                     rdfs:label "date published"@en ;
                     rdfs:comment "Date of first publication or broadcast"@en ;
                     rdfs:domain :Document ;
                     rdfs:range xsd:date .


#################################################################
#    Classes
#################################################################

###  http://xmlns.com/foaf/0.1/Document
foaf:Document rdf:type owl:Class .


###  https://gotriple.eu/ontology/triple#Document
:Document rdf:type owl:Class ;
          rdfs:label "TRIPLE Document"@en ;
          rdfs:comment "A document in the GoTriple platform, representing scholarly publications, research datasets, and other SSH research artifacts. It is a subclass of both schema:CreativeWork and foaf:Document."@en ;
          rdfs:subClassOf schema:CreativeWork ,
                          foaf:Document ;

          # Optional author (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:author ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional contributor (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:contributor ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional publisher (0 or 1)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:publisher ;
                            owl:maxCardinality 1 ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional producer (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:producer ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional funder (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:funder ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional provider (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty schema:provider ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional aggregator (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty :aggregator ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] ;

          # Optional primaryProducer (0 or more)
          rdfs:subClassOf [ rdf:type owl:Restriction ;
                            owl:onProperty :primaryProducer ;
                            owl:allValuesFrom [ owl:unionOf (foaf:Person foaf:Organization) ]
                          ] .


###  http://xmlns.com/foaf/0.1/Organization
foaf:Organization rdf:type owl:Class ;
                  rdfs:label "organization"@en ;
                  rdfs:subClassOf [ rdf:type owl:Restriction ;
                                    owl:onProperty schema:name ;
                                    owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
                                    owl:onDataRange xsd:string
                                  ] .


###  http://xmlns.com/foaf/0.1/Person
foaf:Person rdf:type owl:Class ;
            rdfs:label "person"@en ;
            owl:equivalentClass schema:Person ;
            rdfs:subClassOf [ rdf:type owl:Restriction ;
                              owl:onProperty schema:name ;
                              owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
                              owl:onDataRange xsd:string
                            ] .


###  http://schema.org/CreativeWork
schema:CreativeWork rdf:type owl:Class ;
                    rdfs:label "creative work"@en .


