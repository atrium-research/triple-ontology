@prefix triple: <https://gotriple.eu/ontology/triple/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <https://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .


#################################################################
#    Object Properties
#################################################################

###  https://gotriple.eu/ontology/triple/hasLicense
triple:hasLicense rdf:type owl:ObjectProperty ;
                  rdfs:subPropertyOf dcterms:license ;
                  rdfs:range triple:License ;
                  rdfs:label "has license"@en .

###  https://gotriple.eu/ontology/triple/hasAccessCondition
triple:hasAccessCondition rdf:type owl:ObjectProperty ;
                          rdfs:subPropertyOf dcterms:accessRights ;
                          rdfs:range triple:AccessCondition ;
                          rdfs:label "has access condition"@en .

###  http://rdfs.org/sioc/ns#topic
sioc:topic rdf:type owl:ObjectProperty ;
           rdfs:subPropertyOf dcterms:subject ;
           rdfs:label "sioc:topic"@en ;
           rdfs:comment "A topic of interest, linking to the concept URI. Links to discipline terms."@en .



###  https://gotriple.eu/ontology/triple/hasContentType
triple:hasContentType rdf:type owl:ObjectProperty ;
                      rdfs:subPropertyOf dcterms:type ;
                      rdfs:range triple:ContentType ;
                      rdfs:label "has content type"@en .


###  http://www.w3.org/2004/02/skos/core#closeMatch
skos:closeMatch rdf:type owl:ObjectProperty ;
                rdfs:label "skos:closeMatch"@en ;
                rdfs:comment "A SKOS property indicating that two concepts are sufficiently similar to be used interchangeably in some contexts."@en .

###  http://www.w3.org/2004/02/skos/core#exactMatch
skos:exactMatch rdf:type owl:ObjectProperty ;
                rdfs:label "skos:exactMatch"@en ;
                rdfs:comment "A SKOS property indicating that two concepts can be used interchangeably across all contexts."@en .




#################################################################
#    Annotation Properties
#################################################################

###  http://www.w3.org/2004/02/skos/core#definition
skos:definition rdf:type owl:AnnotationProperty ;
                rdfs:label "skos:definition"@en ;
                rdfs:comment "A SKOS annotation property providing a complete explanation of the intended meaning of a concept."@en .


#################################################################
#    Classes
#################################################################

###  https://schema.org/CreativeWork
schema:CreativeWork rdf:type owl:Class ;
                    rdfs:label "schema:CreativeWork"@en .

###  http://xmlns.com/foaf/0.1/Document
foaf:Document rdf:type owl:Class ;
              rdfs:label "foaf:Document"@en .

###  https://gotriple.eu/ontology/triple/Document
triple:Document rdf:type owl:Class ;
                rdfs:label "Document (Triple)"@en ;
                rdfs:comment "A document in the GoTriple platform, representing scholarly publications, research datasets, and other SSH research artifacts."@en ;
                rdfs:subClassOf schema:CreativeWork ,
                                foaf:Document ,
                                [ rdf:type owl:Restriction ;
                                  owl:onProperty sioc:topic ;
                                  owl:allValuesFrom triple:Discipline
                                ] ,
                                [ rdf:type owl:Restriction ;
                                  owl:onProperty triple:hasLicense ;
                                  owl:allValuesFrom triple:License
                                ] ,
                                [ rdf:type owl:Restriction ;
                                  owl:onProperty triple:hasAccessCondition ;
                                  owl:allValuesFrom triple:AccessCondition
                                ] ,
                                [ rdf:type owl:Restriction ;
                                  owl:onProperty triple:hasContentType ;
                                  owl:allValuesFrom triple:ContentType
                                ] .

###  http://www.w3.org/2004/02/skos/core#Concept
skos:Concept rdf:type owl:Class ;
             rdfs:label "skos:Concept"@en ;
             rdfs:comment "A SKOS concept representing a term in a controlled vocabulary."@en .


###  https://gotriple.eu/ontology/triple/License
triple:License rdf:type owl:Class ;
               rdfs:subClassOf skos:Concept ,
                               dcterms:LicenseDocument ;
               rdfs:label "License"@en .

###  https://gotriple.eu/ontology/triple/AccessCondition
triple:AccessCondition rdf:type owl:Class ;
                       rdfs:subClassOf skos:Concept ,
                                       dcterms:RightsStatement ;
                       rdfs:label "Access Condition"@en .

###  https://gotriple.eu/ontology/triple/Discipline
triple:Discipline rdf:type owl:Class ;
                  rdfs:subClassOf skos:Concept ;
                  rdfs:label "Discipline"@en .

###  https://gotriple.eu/ontology/triple/ContentType
triple:ContentType rdf:type owl:Class ;
                   rdfs:subClassOf skos:Concept ;
                   rdfs:label "Content Type"@en .


