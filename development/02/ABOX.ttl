@prefix triple: <https://gotriple.eu/ontology/triple/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <https://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix datacite: <http://purl.org/spar/datacite/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sioc: <http://rdfs.org/sioc/ns#> .


#################################################################
#    Object Properties
#################################################################

###  http://purl.org/dc/elements/1.1/subject
sioc:topic rdf:type owl:ObjectProperty .

###  http://www.w3.org/2004/02/skos/core#closeMatch
skos:closeMatch rdf:type owl:ObjectProperty .

###  http://www.w3.org/2004/02/skos/core#exactMatch
skos:exactMatch rdf:type owl:ObjectProperty .


#################################################################
#    Annotation Properties
#################################################################

###  http://www.w3.org/2004/02/skos/core#definition
skos:definition rdf:type owl:AnnotationProperty .


#################################################################
#    Classes
#################################################################

###  https://schema.org/CreativeWork
schema:CreativeWork rdf:type owl:Class .

###  http://xmlns.com/foaf/0.1/Document
foaf:Document rdf:type owl:Class .

###  https://gotriple.eu/ontology/triple/Document
triple:Document rdf:type owl:Class ;
                rdfs:label "TRIPLE Document"@en ;
                rdfs:subClassOf schema:CreativeWork ,
                                foaf:Document .

###  http://www.w3.org/2004/02/skos/core#Concept
skos:Concept rdf:type owl:Class .


#################################################################
#    Individuals
#################################################################


###  https://gotriple.eu/ontology/triple/cc_by_4_0
triple:cc_by_4_0 rdf:type owl:NamedIndividual ,
                           triple:License ;
                 skos:exactMatch <https://creativecommons.org/licenses/by/4.0/> ;
                 rdfs:label "CC-BY-4.0"@en ;
                 skos:definition "Creative Commons Attribution 4.0 International License"@en .

###  https://gotriple.eu/ontology/triple/document_1
triple:document_1 rdf:type owl:NamedIndividual ,
                           triple:Document ;
                   triple:hasLicense triple:cc_by_4_0 ;
                  rdfs:label "Example Document with CC-BY-4.0 License"@en ;
                  rdfs:comment "An open access article published under Creative Commons Attribution 4.0"@en .


###  https://gotriple.eu/ontology/triple/open_access
triple:open_access rdf:type owl:NamedIndividual ,
                            triple:AccessCondition ;
                   skos:closeMatch <http://purl.org/coar/access_right/c_abf2> ;
                   rdfs:label "Open Access"@en ;
                   skos:definition "The document is freely available to anyone without restrictions"@en .

###  External COAR concept (for demonstration of closeMatch)
<http://purl.org/coar/access_right/c_abf2> rdf:type owl:NamedIndividual ,
                                                     skos:Concept ;
                                           rdfs:label "coar:open-access"@en .

###  https://gotriple.eu/ontology/triple/document_2
triple:document_2 rdf:type owl:NamedIndividual ,
                           triple:Document ;
                  triple:hasAccessCondition triple:open_access ;
                  rdfs:label "Example Document with Open Access"@en ;
                  rdfs:comment "A research paper that is freely available to anyone"@en .


###  https://gotriple.eu/ontology/triple/article
triple:article rdf:type owl:NamedIndividual ,
                        triple:ContentType ;
               skos:exactMatch <http://purl.org/coar/resource_type/c_6501> ;
               rdfs:label "Article"@en ;
               skos:definition "A scholarly article published in a journal or similar publication"@en .

<http://purl.org/coar/resource_type/c_6501> rdf:type owl:NamedIndividual ,
                                                      skos:Concept ;
                                            rdfs:label "coar:article"@en .

###  https://gotriple.eu/ontology/triple/document_3
triple:document_3 rdf:type owl:NamedIndividual ,
                           triple:Document ;
                  rdfs:label "Example Scholarly Article"@en ;
                  rdfs:comment "A scholarly article demonstrating document type classification"@en ;
                  triple:hasContentType triple:article .


###  https://gotriple.eu/ontology/triple/digital_humanities
triple:digital_humanities rdf:type owl:NamedIndividual ,
                                   triple:Discipline ;
                          skos:closeMatch <http://id.loc.gov/authorities/subjects/sh2008102419> ;
                          rdfs:label "Digital Humanities"@en ;
                          skos:definition "The interdisciplinary field combining computing and humanities disciplines"@en .



###  https://gotriple.eu/ontology/triple/digital_humanities
triple:digital_humanities rdf:type owl:NamedIndividual ,
                                   triple:Discipline ;
                          skos:closeMatch <http://id.loc.gov/authorities/subjects/sh2008102419> ;
                          rdfs:label "Digital Humanities"@en ;
                          skos:definition "The interdisciplinary field combining computing and humanities disciplines"@en .

<http://id.loc.gov/authorities/subjects/sh2008102419> rdf:type owl:NamedIndividual ,
                                                                skos:Concept ;
                                                      rdfs:label "lcsh:digital-humanities"@en .

###  https://gotriple.eu/ontology/triple/linguistics
triple:linguistics rdf:type owl:NamedIndividual ,
                            triple:Discipline ;
                   skos:closeMatch <http://id.loc.gov/authorities/subjects/sh85077222> ;
                   rdfs:label "Linguistics"@en ;
                   skos:definition "The scientific study of language and its structure"@en .

<http://id.loc.gov/authorities/subjects/sh85077222> rdf:type owl:NamedIndividual ,
                                                              skos:Concept ;
                                                    rdfs:label "lcsh:linguistics"@en .

###  https://gotriple.eu/ontology/triple/document_4
triple:document_4 rdf:type owl:NamedIndividual ,
                           triple:Document ;
                  sioc:topic triple:digital_humanities ,
                             triple:linguistics ;
                  rdfs:label "Example Interdisciplinary Study"@en ;
                  rdfs:comment "An interdisciplinary study covering both Digital Humanities and Linguistics"@en .
