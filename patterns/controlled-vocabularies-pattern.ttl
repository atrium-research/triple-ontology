@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix schema: <https://schema.org/> .
@prefix triple: <https://gotriple.eu/ontology/triple#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# Controlled Vocabularies Pattern - Bridge Classes
# This pattern demonstrates how controlled vocabularies are structured in the TRIPLE ontology using Bridge Classes
# which subclass both skos:Concept and the relevant domain class.

# Base Class
skos:Concept rdf:type owl:Class ;
             rdfs:label "skos:Concept"@en ;
             rdfs:comment "A SKOS concept representing a term in a controlled vocabulary."@en .

# SKOS Mapping Properties
skos:exactMatch rdf:type owl:ObjectProperty ;
                rdfs:label "skos:exactMatch"@en ;
                rdfs:comment "A SKOS property indicating that two concepts can be used interchangeably across all contexts."@en .

skos:closeMatch rdf:type owl:ObjectProperty ;
                rdfs:label "skos:closeMatch"@en ;
                rdfs:comment "A SKOS property indicating that two concepts are sufficiently similar to be used interchangeably in some contexts."@en .

# Bridge Class Pattern Template
# 1. Define the Bridge Class as subclass of skos:Concept
triple:VocabularyTermClass rdf:type owl:Class ;
                           rdfs:label "Vocabulary Term Class"@en ;
                           rdfs:subClassOf skos:Concept .

# 2. Define Property with Range as Bridge Class
triple:hasVocabularyTerm rdf:type owl:ObjectProperty ;
                         rdfs:label "has vocabulary term"@en ;
                         rdfs:range triple:VocabularyTermClass .

# 3. Define Individuals as instances of the Bridge Class
triple:term-id rdf:type owl:NamedIndividual ,
                        triple:VocabularyTermClass ;
               rdfs:label "Term Label"@en ;
               skos:exactMatch <https://external-vocabulary.org/term> .

# Example: Content Types

# Bridge Class
triple:ContentType rdf:type owl:Class ;
                   rdfs:label "Content Type"@en ;
                   rdfs:subClassOf skos:Concept .

# Property
triple:hasContentType rdf:type owl:ObjectProperty ;
                      rdfs:label "has content type"@en ;
                      rdfs:range triple:ContentType ;
                      rdfs:subPropertyOf dcterms:type .

# Individuals
triple:typ_journal-article rdf:type owl:NamedIndividual ,
                                   triple:ContentType ;
                          rdfs:label "Journal Article"@en ;
                          skos:exactMatch <https://vocabularies.coar-repositories.org/resource_types/c_6501/> .

# Example: Access Conditions

# Bridge Class
triple:AccessCondition rdf:type owl:Class ;
                       rdfs:label "Access Condition"@en ;
                       rdfs:subClassOf dcterms:RightsStatement ,
                                       skos:Concept .

# Property
triple:hasAccessCondition rdf:type owl:ObjectProperty ;
                          rdfs:label "has access condition"@en ;
                          rdfs:range triple:AccessCondition ;
                          rdfs:subPropertyOf dcterms:accessRights .

# Individuals
triple:acc_open-access rdf:type owl:NamedIndividual ,
                              triple:AccessCondition ;
                     rdfs:label "Open Access"@en ;
                     skos:exactMatch <https://vocabularies.coar-repositories.org/access_rights/c_abf2/> .

# Usage Pattern in Classes (e.g., Document)

triple:Document rdfs:subClassOf [ rdf:type owl:Restriction ;
                                owl:onProperty triple:hasContentType ;
                                owl:allValuesFrom triple:ContentType ] ;
                rdfs:subClassOf [ rdf:type owl:Restriction ;
                                owl:onProperty triple:hasAccessCondition ;
                                owl:allValuesFrom triple:AccessCondition ] .

# ABOX Usage
:example_document rdf:type triple:Document ;
                  triple:hasContentType triple:typ_journal-article ;
                  triple:hasAccessCondition triple:acc_open-access .

# Standard Requirements:
# - Define a local Bridge Class for the vocabulary (e.g., triple:ContentType)
# - Make it a subclass of skos:Concept (and other relevant classes like dcterms:RightsStatement)
# - Define a specialized property with range set to the Bridge Class
# - Individuals are instances of the Bridge Class (NOT just skos:Concept)
# - No skos:ConceptScheme or skos:inScheme required
# - Use skos:exactMatch/closeMatch for external alignment
# - Use owl:allValuesFrom [BridgeClass] in class restrictions